<Page
    x:Class="Platform.GamePage2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Platform"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="1280"
    Height="720">

    <Canvas x:Name="MyCanvas"  Width="1280" Height="720"  HorizontalAlignment="Center" VerticalAlignment="Center">
        <Canvas.Background>
            <ImageBrush ImageSource="Assets/tausta2.jpg"/>
        </Canvas.Background>
        <Border BorderBrush="Black" BorderThickness="1" Height="720" Width="1280"/>
        <Button x:Name="BackButton"
                     Click="BackButton_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Canvas.Left="1187" Canvas.Top="10" Height="48" Width="84" Canvas.ZIndex="10">
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="Assets/WoodenBack.png"/>
            </Button.Background>
        </Button>
    </Canvas>
</Page>
